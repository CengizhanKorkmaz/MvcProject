@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "UpdateAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Admin Güncelleme</h2>
@using (Html.BeginForm("UpdateAdmin", "Authorization", FormMethod.Post))
{
<div class="form-group">
    @Html.HiddenFor(x => x.Id, new { @class = "form-control" })
    <br />
    @Html.Label("Kullanıcı Adı")
    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
    <br />
    @Html.Label("Şifre")
    @Html.TextAreaFor(x => x.Password, new { @class = "form-control" })
    <br />
    @Html.Label("Yetki")
    @Html.TextAreaFor(x => x.Role, new { @class = "form-control" })
    <br />
    @Html.Label("Durum")
    @Html.TextAreaFor(x => x.Status, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>
</div>
}


